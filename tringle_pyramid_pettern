#include <iostream>

using namespace std;

int main()
{
    int n;
    cin>>n;
//   full triengle petter it is made up of 2 increasing and one dcreasing half pyramid

   for(int i = 1; i<=n; i++){
       for(int s=i; s<=n; s++){
       cout<<(" ");
   }
  for(int s=1; s<i; s++){
      cout<<("*");
  }
  for (int s=1; s<=i; s++){
      cout<<("*");
  }

  cout<<endl;
}
    return 0;
}

